@model GoodRoadProj.Models.Route

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Route</legend>

        @Html.HiddenFor(model => model.routeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.userID, "UserData")
        </div>
        <div class="editor-field">
            @Html.DropDownList("userID", String.Empty)
            @Html.ValidationMessageFor(model => model.userID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.routeName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.routeName)
            @Html.ValidationMessageFor(model => model.routeName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
