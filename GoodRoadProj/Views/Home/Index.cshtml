@model IEnumerable<GoodRoadProj.Models.Route>

@section featured {
    <section class="featured">
        <div>
            <a id="allRoutes">Все маршруты</a>
            <a id="myRoutes">Мои маршруты</a>
            <a id="closestRoutes">Ближайшие маршруты</a>
            <div id="map">
            </div>

            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserData.userName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.routeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.routeDiscription)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserData.userName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.routeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.routeDiscription)
                        </td>
                        <td>
                            @*@Html.ActionLink("Показать", "Index", new { id = item.routeID }, new { style="padding:2px 10px" })*@
                            <a id="@item.routeID" name="GetRouteByID" style="padding:2px 10px">Показать</a>                   
                        </td>
                    </tr>
                }

            </table>
        </div>
       

</section>
}


    @section Scripts {
        <script src="~/Scripts/maps.js" type="text/javascript"></script>
    }
